#:kivy 2.0
#:import Frame views.components.frame.Frame 
#:import TextLabel views.components.text.TextLabel 
#:import Tbutton views.components.buttons.Tbutton
#:import Ibutton views.components.buttons.Ibutton

<RecoverPage@Frame>:
    background: True
    background_color: .5, .5, .5, 1

    Frame:
        id: bg
        background: True
        radius: [20, 20, 20, 20]
        size_hint: 0.95, 0.95
        pos_hint: {'x': 0.025, 'y': 0.025}

    Image:
        id: logo
        source: r'views\media\images\xeque_mate_logo.png'
        size_hint: .3, .3
        pos_hint: {'x': .5 - logo.size_hint[0]/2, 'y': .76 - logo.size_hint[1]/2}

    TextLabel:
        id: username_text
        text: 'Username:'
        font_size: 20
        pos_hint: {'x': 0.07, 'y': 0.39}

    TextInput:
        id: username_input
        font_size: 23
        size_hint: 0.87, 0.069
        pos_hint: {'x': 0.07, 'y': 0.3}
        multiline: False
        on_text: self._update_text_options()

    BoxLayout:
        id: buttons_layout
        orientation: 'horizontal'
        size_hint: 0.87, 0.15
        pos_hint: {'x': 0.07, 'y': 0.06}
        spacing: 10

        Tbutton:
            id: back_button
            text: 'Back'
            background_color: .05, .05, .05, 1

        Tbutton:
            id: register_button
            text: 'Register'
            background_color: .05, .05, .05, 1
